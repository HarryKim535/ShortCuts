{
    "manifest_version": 2,
    "name": "ShortCuts",
    "version": "0.1",
    "description": "Create ShortCuts that Never Bother You Again! under development 40%",
    "permissions": ["storage", "bookmarks", "tabs", "input", "activeTab"],
    "commands": {
        "openBM0": {
            "suggested_key": {
                "windows": "Alt+1"
            },
            "description": "Open your first Bookmark"
        },
        "openBM1": {
            "suggested_key": {
                "windows": "Alt+2"
            },
            "description": "Open your second Bookmark"
        },
        "openBM2": {
            "suggested_key": {
                "windows": "Alt+3"
            },
            "description": "Open your third Bookmark"
        },
        "openBM3": {
            "suggested_key": {
                "windows": "Alt+4"
            },
            "description": "Open your forth Bookmark"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": {
        "matches": ["*"],
        "run_at": "document_start",
        "js": ["contentScript.js"]
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_title": "ShortCuts\nLink and Popup Manager",
        "default_icon": {
            "16": "images/chromeSc16.png",
            "32": "images/chromeSc32.png",
            "48": "images/chromeSc48.png",
            "128": "images/chromeSc128.png"
        }
    },
    "icons": {
        "16": "images/chromeSc16.png",
        "32": "images/chromeSc32.png",
        "48": "images/chromeSc48.png",
        "128": "images/chromeSc128.png"
    }
}